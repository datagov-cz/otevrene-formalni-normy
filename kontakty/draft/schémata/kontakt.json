{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://data.gov.cz/otevřené-formální-normy/kontakty/draft/schémata/kontakt.json",
    "name": "Kontakt",
    "description": "Kontakt na člověka či společnost",
    "properties": {
        "email": {
            "type": "string",
            "title": "E-mail",
            "description": "Kontaktní e-mailová adresa",
            "examples": [
                "otevrenadata@mvcr.cz"
            ]
        },
        "idds": {
            "type": "string",
            "title": "ID datové schránky",
            "description": "ID datové schránky",
            "examples": [
                "abcdef"
            ]
        },
        "mobil": {
            "type": "string",
            "title": "Mobilní telefon",
            "description": "Telefonní číslo na mobilní telefon",
            "examples": [
                "+420123456789"
            ]
        },
        "telefon": {
            "type": "string",
            "title": "Telefon",
            "description": "Telefonní číslo na pevnou linku",
            "examples": [
                "+420123456789"
            ]
        },
        "url": {
            "type": "string",
            "format": "uri",
            "title": "Adresa webové stránky",
            "description": "Adresa webové stránky pro kontakt",
            "examples": [
                "https://data.gov.cz/"
            ]
        }
    }
}
