{
	"$schema": "https://json-schema.org/draft/2019-09/schema",
	"$id": "https://ofn.gov.cz/kontakty/draft/schémata/kontakt.json",
	"name": "Kontakt",
	"description": "Kontakt na člověka či společnost",
	"required": ["typ"],
	"properties": {
		"typ": {
			"const": "Kontakt"
		},
		"druh": {
			"$ref": "https://ofn.gov.cz/základní-datové-typy/draft/schémata/text.json"
		},
		"email": {
			"type": "string",
			"format": "iri",
			"title": "E-mail",
			"description": "Kontaktní e-mailová adresa",
			"examples": [
				"mailto:otevrenadata@mvcr.cz"
			]
		},
		"facebook": {
			"type": "string",
			"title": "Facebook",
			"description": "Uživatelské jméno na Facebooku",
			"examples": [
				"MinisterstvoobranyCeskerepubliky"
			]
		},
		"idds": {
			"type": "string",
			"title": "ID datové schránky",
			"description": "ID datové schránky",
			"examples": [
				"abcdef"
			]
		},
		"instagram": {
			"type": "string",
			"title": "Instagram",
			"description": "Uživatelské jméno na Instagramu",
			"examples": [
				"ceskystatistickyurad"
			]
		},
		"mobil": {
			"type": "string",
			"format": "iri",
			"title": "Mobilní telefon",
			"description": "Telefonní číslo na mobilní telefon",
			"examples": [
				"tel:+420123456789"
			]
		},
		"telefon": {
			"type": "string",
			"format": "iri",
			"title": "Telefon",
			"description": "Telefonní číslo na pevnou linku",
			"examples": [
				"tel:+420123456789"
			]
		},
		"twitter": {
			"type": "string",
			"title": "Twitter",
			"description": "Uživatelské jméno na Twitteru",
			"examples": [
				"vnitro"
			]
		},
		"url": {
			"type": "string",
			"format": "iri",
			"title": "Adresa webové stránky",
			"description": "Adresa webové stránky pro kontakt",
			"examples": [
				"https://data.gov.cz/"
			]
		},
		"umístění": {
			"$ref": "https://ofn.gov.cz/umístění/draft/schémata/umístění.json"
		}
	}
}