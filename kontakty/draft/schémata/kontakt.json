{
    "$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "https://data.gov.cz/otevřené-formální-normy/kontakty/draft/schémata/kontakt.json",
    "name": "Kontakt",
    "description": "Kontakt na člověka či společnost",
    "properties": {
        "email": {
            "type": "string",
            "title": "E-mail",
            "description": "Kontaktní e-mailová adresa",
            "examples": [
                "otevrenadata@mvcr.cz"
            ]
        },
        "idds": {
            "type": "string",
            "title": "ID datové schránky",
            "description": "ID datové schránky",
            "examples": [
                "abcdef"
            ]
        },
        "telefonní_čísla": {
          "type": "array",
          "name": "Telefonní čísla",
          "description": "Telefonní čísla",
          "items": {
            "properties": {
              "číslo": {
                "type": "string",
                "title": "Telefonní číslo",
                "description": "Telefonní číslo včetně mezinárodní předvolby",
                "examples": [
                    "+420123456789"
                ]
              },
              "identifikátor": {
                "type": "string",
                "title": "Identifikátor",
                "description": "Identifikace telefonního čísla",
                "examples": [
                    "práce",
                    "hlas",
                    "fax"
                ]
              }
            }
        },
        "url": {
            "type": "string",
            "format": "iri",
            "title": "Adresa webové stránky",
            "description": "Adresa webové stránky pro kontakt",
            "examples": [
                "https://data.gov.cz/"
            ]
        }
    }
}
