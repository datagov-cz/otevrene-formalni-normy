{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://ofn.gov.cz/dcat-ap-cz-rozhraní-katalogů-dat/draft/katalog/schéma.json",
  "title": "Katalog",
  "description": "Řízená kolekce metadat o datových sadách a datových službách",
  "type": "object",
  "required": [
    "iri",
    "typ",
    "název",
    "popis",
    "kontaktní_bod",
    "poskytovatel"
  ],
  "properties": {
    "iri": {
      "type": "string",
      "format": "iri"
    },
    "typ": {
      "oneOf": [
        {
          "const": "Katalog"
        },
        {
          "type": "array",
          "contains": {
            "const": "Katalog"
          },
          "items": {
            "type": "string"
          }
        }
      ]
    },
    "název": {
      "title": "název",
      "description": "Tato vlastnost obsahuje název datového katalogu.",
      "type": "object",
      "additionalProperties": {
        "title": "Hodnota v jiném jazyce",
        "type": "string"
      },
      "properties": {
        "cs": {
          "title": "Hodnota v českém jazyce",
          "type": "string"
        },
        "en": {
          "title": "Hodnota v anglickém jazyce",
          "type": "string"
        }
      }
    },
    "popis": {
      "title": "popis",
      "description": "Tato vlastnost obsahuje volný text s popisem datového katalogu.",
      "type": "object",
      "additionalProperties": {
        "title": "Hodnota v jiném jazyce",
        "type": "string"
      },
      "properties": {
        "cs": {
          "title": "Hodnota v českém jazyce",
          "type": "string"
        },
        "en": {
          "title": "Hodnota v anglickém jazyce",
          "type": "string"
        }
      }
    },
    "kontaktní_bod": {
      "title": "kontaktní bod",
      "description": "Tato vlastnost obsahuje kontaktní informace, které mohou být využity pro zasílání připomínek ke katalogu.",
      "type": "object",
      "required": [
        "iri",
        "typ",
        "jméno",
        "e-mail"
      ],
      "properties": {
        "iri": {
          "type": "string",
          "format": "iri"
        },
        "typ": {
          "oneOf": [
            {
              "const": "Organizace"
            },
            {
              "type": "array",
              "contains": {
                "const": "Organizace"
              },
              "items": {
                "type": "string"
              }
            }
          ]
        },
        "jméno": {
          "title": "jméno",
          "description": "Jméno objektu jako formátovaný text.",
          "type": "object",
          "additionalProperties": {
            "title": "Hodnota v jiném jazyce",
            "type": "string"
          },
          "properties": {
            "cs": {
              "title": "Hodnota v českém jazyce",
              "type": "string"
            },
            "en": {
              "title": "Hodnota v anglickém jazyce",
              "type": "string"
            }
          }
        },
        "e-mail": {
          "title": "email",
          "description": "E-mailová adresa pro komunikaci.",
          "type": "string",
          "format": "iri"
        }
      }
    },
    "domovská_stránka": {
      "title": "domovská stránka",
      "description": "Tato vlastnost odkazuje na domovskou stránku lokálního katalogu, kam mohou chodit uživatelé.",
      "type": "string",
      "format": "iri"
    },
    "poskytovatel": {
      "title": "poskytovatel",
      "description": "Poskytovatel datového katalogu.",
      "type": "string",
      "format": "iri"
    },
    "datová_sada": {
      "title": "datová sada",
      "description": "Kolekce dat, která je katalogizována v katalogu.",
      "type": "array",
      "items": {
        "type": "string",
        "format": "iri"
      }
    }
  }
}