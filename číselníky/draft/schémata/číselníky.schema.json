{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "$id": "https://data.poskytovatel.cz/cesta-k-json-schématům/číselník-měn.schema.json",
  "required": [
    "typ",
    "id",
    "název-číselníku",
    "položky"
  ],
  "type": "object",
  "properties": {
    "typ": {
      "type": "string",
      "default": "číselník",
      "pattern": "^číselník$"
    },
    "id": {
      "type": "string"
    },
    "název-číselníku": {
      "type": "object",
      "required": [
        "cs"
      ],
      "properties": {
        "cs": {
          "type": "string"
        },
        "en": {
          "type": "string"
        }
      }
    },
    "popis-číselníku": {
      "type": "object",
      "required": [
        "cs"
      ],
      "properties": {
        "cs": {
          "type": "string"
        },
        "en": {
          "type": "string"
        }
      }
    },
    "platnost-číselníku": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "datum_začátku": {
          "type": "string",
          "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$"
        },
        "datum_konce": {
          "type": "string",
          "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$"
        }
      }
    },
    "položky": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
    	  "typ",
          "id",
          "kód",
          "název"
        ],
        "properties": {
          "typ": {
            "type": "string",
            "default": "položka",
            "pattern": "^položka$"
          },
          "id": {
            "type": "string"
          },
          "kód": {
            "type": "string"
          },
          "název": {
            "type": "object",
            "required": [
              "cs"
            ],
            "properties": {
              "cs": {
                "type": "string"
              },
              "en": {
                "type": "string"
              }
            }
          },
          "alt-název": {
            "type": "object",
            "required": [
              "cs"
            ],
            "properties": {
              "cs": {
                "type": "string"
              },
              "en": {
                "type": "string"
              }
            }
          },
          "definice": {
            "type": "object",
            "required": [
              "cs"
            ],
            "properties": {
              "cs": {
                "type": "string"
              },
              "en": {
                "type": "string"
              }
            }
          },
          "popis": {
            "type": "object",
            "required": [
              "cs"
            ],
            "properties": {
              "cs": {
                "type": "string"
              },
              "en": {
                "type": "string"
              }
            }
          },
          "platnost": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string"
              },
              "datum_začátku": {
                "type": "string",
                "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$"
              },
              "datum_konce": {
                "type": "string",
                "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$"
              }
            }
          },
          "přesná-shoda": {
            "type": "string"
          },
          "blízká-shoda": {
            "type": "string"
          },
          "širší-souvislost": {
            "type": "string"
          },
          "užší-souvislost": {
            "type": "string"
          },
          "souvislost": {
            "type": "string"
          }
        }
      }
    }
  }
}