{
	"$schema": "https://json-schema.org/draft/2019-09/schema",
	"$id": "https://pod-test.mvcr.gov.cz/otevřené-formální-normy/pracovní-místa-ve-vědě-a-výzkumu/draft/schémata/pracovní-místo-ve-vědě-a-výzkumu.json",
	"name": "Pracovní místo ve vědě a výzkumu",
	"description": "Pracovní místo ve vědě a výzkumu",
	"required": ["typ"],
	"allOf": [{
		"$ref": "https://ofn.gov.cz/věc/2020-07-01/schémata/věc.json"
	}, {
		"properties": {
			"typ": {
				"oneOf": [{
					"const": "Pracovní místo ve vědě a výzkumu"
				},{
					"type": "array",
					"contains": {
						"const": "Pracovní místo ve vědě a výzkumu"
					},
					"items": {
						"type": "string"
					}
				}]
			},
			"id": {
				"type": "string",
				"title": "Interní ID",
				"examples": [
					"aaaa123"
				]
			},
			"url": {
				"type": "string",
				"format": "iri",
				"title": "Webová stránka",
				"examples": [
					"https://www.mff.cuni.cz/cs/fakulta/pracovni-prilezitosti/vyberova-rizeni/lektor-na-katedre-didaktiky-fyziky-termin-prihlasek-21-6-2020"
				]
			},
			"nástup_dle_dohody": {
				"type": "boolean",
				"title": "Nástup dle dohody",
				"examples": [true, false]
			},
			"nástup_ihned": {
				"type": "boolean",
				"title": "Nástup ihned",
				"examples": [true, false]
			},
			"počet_hodin_týdně": {
				"type": "number",
				"title": "Počet hodin týdně",
				"examples": [
					20,
					40
				]
			},
			"doba_trvání": {
				"$ref": "https://ofn.gov.cz/základní-datové-typy/2020-07-01/schémata/množství.json"
			},
			"požadované_dokumenty": {
				"type": "array",
				"items": {
					"$ref": "https://ofn.gov.cz/věc/2020-07-01/schémata/věc.json"
				}
			},
			"kontakt": {
				"$ref": "https://ofn.gov.cz/kontakty/2020-07-01/schémata/kontakty.json"
			},
			"platové_podmínky": {
				"$ref": "https://pod-test.mvcr.gov.cz/otevřené-formální-normy/práce/draft/schémata/platové-podmínky.json"
			},
			"pracoviště": {
				"$ref": "https://pod-test.mvcr.gov.cz/otevřené-formální-normy/práce/draft/schémata/pracoviště.json"
			},
			"nástup": {
				"$ref": "https://ofn.gov.cz/základní-datové-typy/2020-07-01/schémata/časový-okamžik.json"
			},
			"termín_podání": {
				"$ref": "https://ofn.gov.cz/základní-datové-typy/2020-07-01/schémata/časový-okamžik.json"
			},
			"kvalifikace": {
				"type": "array",
				"items": {
					"$ref": "https://pod-test.mvcr.gov.cz/otevřené-formální-normy/práce/draft/schémata/kvalifikace.json"
				}
			},
			"akademická_pozice_na_vysoké_škole": {
				"type": "string",
				"format": "iri",
				"pattern": "^https\\:\/\/data\\.mvcr\\.gov\\.cz\/zdroj\/číselníky\/akademické-pozice-na-vysokých-školách\/položky\/.*$",
				"title": "Akademická pozice na vysoké škole",
				"examples": [
					"https://data.mvcr.gov.cz/zdroj/číselníky/akademické-pozice-na-vysokých-školách/položky/docent"
				]
			},
			"akademická_pozice_na_akademii_věd": {
				"type": "string",
				"format": "iri",
				"pattern": "^https\\:\/\/data\\.mvcr\\.gov\\.cz\/zdroj\/číselníky\/pozice-na-akademii-věd\/položky\/.*$",
				"title": "Akademická pozice na Akademii věd ČR",
				"examples": [
					"https://data.mvcr.gov.cz/zdroj/číselníky/pozice-na-akademii-věd/položky/postdoktorand"
				]
			},
			"obor_isvav": {
				"type": "array",
				"items": {
					"type": "string",
					"format": "iri",
					"pattern": "^https\\:\/\/data\\.mvcr\\.gov\\.cz\/zdroj\/číselníky\/klasifikace-výzkumných-oborů\/položky\/.*$",
					"title": "Obor ISVaV",
					"examples": [
						"https://data.mvcr.gov.cz/zdroj/číselníky/klasifikace-výzkumných-oborů/položky/IN"
					]
				}
			},
			"obor_frascati": {
				"type": "array",
				"items": {
					"type": "string",
					"format": "iri",
					"pattern": "^https\\:\/\/data\\.mvcr\\.gov\\.cz\/zdroj\/číselníky\/ford\/položky\/.*$",
					"title": "Obor FORD",
					"examples": [
						"https://data.mvcr.gov.cz/zdroj/číselníky/ford/položky/20206"
					]
				}
			},
			"typ_pracovního_vztahu": {
				"type": "array",
				"items": {
					"type": "string",
					"format": "iri",
					"pattern": "^https\\:\/\/data\\.mvcr\\.gov\\.cz\/zdroj\/číselníky\/typy-pracovních-vztahů\/položky\/.*$",
					"title": "Typ pracovního vztahu",
					"examples": [
						"https://data.mvcr.gov.cz/zdroj/číselníky/typy-pracovních-vztahů/položky/HPP"
					]
				}
			}
		}
	}]
}