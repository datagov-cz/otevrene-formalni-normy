{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://ofn.gov.cz/dcat-ap-cz-rozhraní-katalogů-otevřených-dat/2024-05-28/schémata/datová-série.json",
    "type": "object",
    "title": "Datová série",
    "required": [
        "@context",
        "typ",
        "iri",
        "název",
        "popis",
        "poskytovatel",
        "téma",
        "periodicita_aktualizace",
        "klíčové_slovo",
        "prvek_rúian"
    ],
    "properties": {
        "@context": {
			"const": "https://ofn.gov.cz/dcat-ap-cz-rozhraní-katalogů-otevřených-dat/2024-05-28/kontexty/rozhraní-katalogů-otevřených-dat.jsonld"
		},
        "typ": {
            "oneOf": [
                {
                    "const": "Datová série"
                },
                {
                    "type": "array",
                    "contains": {
                        "const": "Datová série"
                    },
                    "items": {
                        "type": "string"
                    }
                }
            ]
        },
        "iri": {
            "type": "string",
            "format": "iri",
            "title": "Identifikátor",
            "minLength": 8,
            "pattern": "^https://",
            "examples": [
                "https://www.trebic.cz/zdroj/aktualita/2020/dopadení-lupiče-na-francouzské-ulici"
            ]
        },
        "název": {
            "$ref": "https://ofn.gov.cz/základní-datové-typy/2020-07-01/schémata/text.json"
        },
        "popis": {
            "$ref": "https://ofn.gov.cz/základní-datové-typy/2020-07-01/schémata/text.json"
        },
        "poskytovatel": {
            "type": "string",
            "format": "iri",
            "title": "Poskytovatel",
            "examples": [
                "https://rpp-opendata.egon.gov.cz/odrpp/zdroj/orgán-veřejné-moci/66003008"
            ]
        },
        "téma": {
            "type": "array",
            "items": {
                "type": "string",
                "format": "iri",
                "title": "Téma",
                "examples": [
                    "http://publications.europa.eu/resource/authority/data-theme/TRAN"
                ]
            },
            "contains": {
                "type": "string",
                "format": "iri",
                "title": "Téma",
                "pattern": "^http\\://publications\\.europa\\.eu/resource/authority/data-theme/.*$",
                "examples": [
                    "http://publications.europa.eu/resource/authority/data-theme/TRAN"
                ]
            }
        },
        "periodicita_aktualizace": {
            "type": "string",
            "format": "iri",
            "title": "Periodicita aktualizace",
            "pattern": "^http\\://publications\\.europa\\.eu/resource/authority/frequency/.*$",
            "examples": [
                "http://publications.europa.eu/resource/authority/frequency/MONTHLY"
            ]
        },
        "klíčové_slovo": {
            "$ref": "https://ofn.gov.cz/základní-datové-typy/2020-07-01/schémata/více-textů.json"
        },
        "prvek_rúian": {
            "type": "array",
            "items": {
                "type": "string",
                "format": "iri",
                "title": "Související geografické území - prvek z RÚIAN",
                "pattern": "^https\\://linked\\.cuzk\\.cz/resource/ruian/.*$",
                "examples": [
                    "https://linked.cuzk.cz/resource/ruian/stat/1"
                ]
            }
        },
        "geografické_území": {
            "type": "array",
            "items": {
                "type": "string",
                "format": "iri",
                "title": "Související geografické území",
                "examples": [
                    "http://publications.europa.eu/resource/authority/continent/EUROPE"
                ]
            }
        },
        "časové_pokrytí": {
            "type": "object",
            "required": [
                "typ"
            ],
            "properties": {
                "typ": {
                    "oneOf": [
                        {
                            "const": "Časový interval"
                        },
                        {
                            "type": "array",
                            "contains": {
                                "const": "Časový interval"
                            },
                            "items": {
                                "type": "string"
                            }
                        }
                    ]
                },
                "začátek": {
                    "type": "string",
                    "format": "date",
                    "title": "Datum začátku",
                    "examples": [
                        "2019-01-01+01:00"
                    ]
                },
                "konec": {
                    "type": "string",
                    "format": "date",
                    "title": "Datum konce",
                    "examples": [
                        "2019-01-01+01:00"
                    ]
                }
            }
        },
        "kontaktní_bod": {
            "type": "object",
            "required": [
                "typ"
            ],
            "properties": {
                "typ": {
                    "type": "string",
                    "examples": [
                        "Organizace"
                    ]
                },
                "jméno": {
                    "$ref": "https://ofn.gov.cz/základní-datové-typy/2020-07-01/schémata/text.json"
                },
                "e-mail": {
                    "type": "string",
                    "format": "iri",
                    "pattern": "^mailto\\:",
                    "examples": [
                        "mailto:sekretariat.190@mdcr.cz"
                    ]
                }
            }
        },
        "dokumentace": {
            "type": "string",
            "format": "iri",
            "title": "Dokumentace",
            "examples": [
                "https://www.mdcr.cz/Dokumenty/Verejna-doprava/Jizdni-rady,-kalendare-pro-jizdni-rady,-metodi-(1)/Jizdni-rady-verejne-dopravy"
            ]
        },
        "specifikace": {
            "type": "array",
            "items": {
                "type": "string",
                "format": "iri",
                "title": "Specifikace",
                "examples": [
                    "https://ofn.gov.cz/turistické-cíle/2020-07-01/"
                ]
            }
        },
        "koncept_euroVoc": {
            "type": "array",
            "items": {
                "type": "string",
                "format": "iri",
                "pattern": "^http\\://eurovoc\\.europa\\.eu/.*$",
                "title": "Klasifikace dle EuroVoc",
                "examples": [
                    "http://eurovoc.europa.eu/1001"
                ]
            }
        },
        "prostorové_rozlišení_v_metrech": {
            "oneOf": [
                {
                    "type": "number",
                    "title": "Prostorové rozlišení v metrech",
                    "description": "Prostorové rozlišení v metrech jako JSON číslo pro zpětnou kompatibilitu. Způsobuje problémy s datovým typem xsd:decimal.",
                    "examples": [
                        0.5
                    ]
                },
                {
                    "type": "string",
                    "title": "Prostorové rozlišení v metrech",
                    "description": "Prostorové rozlišení v metrech jako JSON řetězec. Preferovaná varianta pro kompatibilitu s datovým typem xsd:decimal.",
                    "examples": [
                        "0.5"
                    ]
                }
            ]
        },
        "časové_rozlišení": {
            "type": "string",
            "title": "Časové rozlišení",
            "examples": [
                "P1D"
            ]
        },
        "je_součástí": {
            "type": "string",
            "format": "iri",
            "title": "Je součástí",
            "examples": [
                "https://lkod.mvcr.cz/zdroj/datové-sady/12345"
            ]
        },
        "právní_předpis": {
            "type": "array",
            "items": {
                "type": "string",
                "format": "iri",
                "example": [
                    "http://data.europa.eu/eli/reg_impl/2023/138/oj",
                    "https://www.e-sbirka.cz/eli/cz/sb/1999/106/2024-01-01/dokument/norma/cast_1/par_3a/odst_6"
                ]        
            }
        },
        "kategorie_hvd": {
            "type": "array",
            "items": {
                "type": "string",
                "format": "iri",
                "pattern": "^http\\://data\\.europa\\.eu/bna/c_.*$",
                "example": [
                    "http://data.europa.eu/bna/c_164e0bf5"
                ]
            }
        },
        "distribuce": false
    }
}