{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://data.gov.cz/otevřené-formální-normy/lidé-a-osoby/draft/schémata/osoba.json",
    "name": "Osoba",
    "type": "object",
    "description": "Právnická osoba a její identifikace",
    "oneOf": [{
            "required": ["ičo"],
            "properties": {
                "ičo": {
                    "$id": "#/oneOf/tuzemská/properties/ičo",
                    "type": "string",
                    "title": "IČO",
                    "description": "IČO",
                    "examples": [
                        "00112233"
                    ]
                },
                "název": {
                    "$id": "#/oneOf/tuzemská/properties/název",
                    "type": "string",
                    "title": "Název",
                    "description": "Název právnické osoby.",
                    "examples": [
                        "MojeFirma s.r.o."
                    ]
                }
            }
        }, {
            "required": ["název", "stát_registrace"],
            "properties": {

                "název": {
                    "$id": "#/oneOf/zahraniční/properties/název",
                    "type": "string",
                    "title": "Název",
                    "description": "Název právnické osoby.",
                    "examples": [
                        "MojeFirma s.r.o."
                    ]
                },
                "stát_registrace": {
                    "$ref": "https://data.gov.cz/otevřené-formální-normy/základní-datové-typy/draft/schémata/stát.json"
                }
            }
        }

    ]
}