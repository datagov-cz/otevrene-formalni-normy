{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"$id": "https://ofn.gov.cz/dcat-ap-cz-360-2023/draft/schémata/katalog.json",
	"type": "object",
	"title": "Katalog",
	"required": ["@context","typ", "iri", "název", "popis", "poskytovatel", "datová_sada"],
	"properties": {
		"@context": {
            "oneOf": [               
                {
                    "const": "https://ofn.gov.cz/dcat-ap-cz-360-2023/draft/kontexty/dcat-ap-cz-360-2023.jsonld"
                },
                {
                    "type": "array",
                    "contains": {
                        "const": "https://ofn.gov.cz/dcat-ap-cz-360-2023/draft/kontexty/dcat-ap-cz-360-2023.jsonld"
                    },
                    "items": {
                        "type": "string",
                        "format": "iri"
                    }
                }
            ]
        },
		"typ": {
			"oneOf": [{
				"const": "Katalog"
				},{
				"type": "array",
				"contains": {
					"const": "Katalog"
				},
				"items": {
					"type": "string"
				}
			}]
		},
		"iri": {
			"type": "string",
			"format": "iri",
			"title": "Identifikátor",
			"minLength": 8,
			"pattern": "^https?://",
			"examples": [
				"https://www.trebic.cz/zdroj/aktualita/2020/dopadení-lupiče-na-francouzské-ulici"
			]
		},
		"název": {
			"$ref": "https://ofn.gov.cz/základní-datové-typy/2020-07-01/schémata/text.json"
		},
		"popis": {
			"$ref": "https://ofn.gov.cz/základní-datové-typy/2020-07-01/schémata/text.json"
		},
		"poskytovatel": {
			"type": "string",
			"format": "iri",
			"title": "Poskytovatel",
			"examples": [
				"https://rpp-opendata.egon.gov.cz/odrpp/zdroj/orgán-veřejné-moci/66003008"
			]
		},
		"kontaktní_bod": {
			"type": "object",
			"required": [ "typ" ],
			"properties": {
				"typ": {
					"type": "string",
					"examples": [ "Organizace" ]
				},
				"jméno": {
					"$ref": "https://ofn.gov.cz/základní-datové-typy/2020-07-01/schémata/text.json"
				},
				"e-mail": {
					"type": "string",
					"format": "iri",
					"pattern": "^mailto\\:",
					"examples": [
						"mailto:sekretariat.190@mdcr.cz"
					]
				}
			}
		},
		"domovská_stránka": {
			"type": "string",
			"format": "iri",
			"title": "Domovská stránka",
			"minLength": 8,
			"pattern": "^https://",
			"examples": [
				"https://data.gov.cz/"
			]
		},
		"datová_sada": {
			"type": "array",
			"items": {
				"type": "string",
				"format": "iri",
				"minLength": 8,
				"pattern": "^https://",					
				"title": "Datová sada"
			}
		}
	}
}