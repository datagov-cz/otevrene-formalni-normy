{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://ofn.gov.cz/registr-práv-a-povinností/kategorie-orgánů-veřejné-moci/draft/kategorie-orgánů-veřejné-moci.schema.json",
  "required": [
    "položky"
  ],
  "type": "object",
  "properties": {
    "položky": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "default": "kategorie-ovm",
            "pattern": "^kategorie-ovm$"
          },
          "id": {
            "type": "string",
            "examples": [
              "kategorie-ovm/KO13"
            ],
            "pattern": "^kategorie-ovm/KO[0-9]+$"
          },
          "název": {
            "type": "object",
            "examples": [
              {"cs" : "Obce s matričním úřadem"}
            ],
            "properties": {
              "cs": {
                "type": "string"
              }
            }
          },
          "identifikátor": {
            "type": "string",
            "examples": [
              "KO13"
            ],
            "pattern": "^KO[0-9]+$"
          },
          "ustanovení": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "type": {
                  "type": "string",
                  "default": "ustanovení-právního-předpisu",
                  "pattern": "^ustanovení-právního-předpisu$"
                },
                "označení": {
                  "type": "string",
                  "examples": [
                    "§ 2 zákona č. 301/2000 Sb. - Zákon o matrikách, jménu a příjmení"
                  ]
                }
              }
            }
          },
          "ohlašovatel": {
            "type": "string",
            "examples": [
              "orgán-veřejné-moci/00007064"
            ],
            "pattern": "^orgán-veřejné-moci/[0-9]{8}(\\.[0-9]+)?$"
          },
          "platnost-od": {
            "type": "string",
            "examples": [
              "2020-02-20"
            ],
            "format": "date"
          },
          "platnost-do": {
            "type": "string",
            "examples": [
              "2020-02-20"
            ],
            "format": "date"
          }
        }
      }
    }
  }
}