{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://data.gov.cz/otevřené-formální-normy/registr-práv-a-povinností/oprávnění-k-přístupu-k-údajům.schema.json",
  "required": [
    "položky"
  ],
  "type": "object",
  "properties": {
    "položky": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "default": "oprávnění",
            "pattern": "^oprávnění$"
          },
          "id": {
            "type": "string",
            "examples": [
              "oprávnění-k-přístupu-k-údajům/A1046-A101-1"
            ],
            "pattern": "^oprávnění-k-přístupu-k-údajům/A[0-9]+-A[0-9]+-[0-9]+$"
          },
          "kód": {
            "type": "string",
            "examples": [
              "A1046-A101-1"
            ],
            "pattern": "^A[0-9]+-A[0-9]+-[0-9]+$"
          },
          "poskytující-agenda": {
            "type": "string",
            "examples": [
              "agenda/A101"
            ],
            "pattern": "^agenda/A[0-9]+$"
          },
          "čerpající-agenda": {
            "type": "string",
            "examples": [
              "agenda/A1046"
            ],
            "pattern": "^agenda/A[0-9]+$"
          },
          "údaje": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "type": {
                  "type": "string",
                  "default": "oprávnění-údaj",
                  "pattern": "^oprávnění-údaj$"
                },
                "id": {
                  "type": "string",
                  "examples": [
                    "oprávnění-k-přístupu-k-údaji/A1046-A101-1/101-1-1"
                  ],
                  "pattern": "^oprávnění-k-přístupu-k-údaji/A[0-9]+-A[0-9]+-[0-9]+/[0-9]+-[0-9]+-[0-9]+$"
                },
                "úroveň-přístupu": {
                  "type": "string",
                  "examples": [
                    "R"
                  ],
                  "pattern": "^(R|W|RH)$"
                },
                "údaj": {
                  "type": "string",
                  "examples": [
                    "údaj/101-1-1"
                  ],
                  "pattern": "^údaj/[0-9]+-[0-9]+-[0-9]+$"
                }
              }
            }
          },
          "role": {
            "type": "array",
            "examples": [
              "role/A1046/CR6072/66003008"
            ],
            "items": {
              "type": "string",
              "pattern": "^role/A[0-9]+/CR[0-9]+/(([0-9]{8}(\\.[0-9]+)?)|(KO[0-9]+)|(KU[0-9]+))$"
            }
          },
          "ustanovení": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "type": {
                  "type": "string",
                  "default": "ustanovení-právního-předpisu",
                  "pattern": "^ustanovení-právního-předpisu$"
                },
                "označení": {
                  "type": "string",
                  "examples": [
                    "§ 18 odst. 5 zákona č. 111/2009 Sb. - o základních registrech"
                  ]
                }
              }
            }
          }
        }
      }
    }
  }
}