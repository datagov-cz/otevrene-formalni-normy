{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://ofn.gov.cz/registr-práv-a-povinností/agendy/2021-01-11/agendy.schema.json",
  "required": [
    "položky"
  ],
  "type": "object",
  "properties": {
    "položky": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "default": "agenda",
            "pattern": "^agenda$"
          },
          "id": {
            "type": "string",
            "examples": [
              "agenda/A1046"
            ],
            "pattern": "^agenda/A[0-9]+$"
          },
          "název": {
            "type": "object",
            "examples": [
              {"cs": "Agenda řidičů"}
            ],
            "properties": {
              "cs": {
                "type": "string"
              }
            }
          },
          "kód": {
            "type": "string",
            "examples": [
              "A1046"
            ],
            "pattern": "^A[0-9]+$"
          },
          "ustanovení": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "type": {
                  "type": "string",
                  "default": "ustanovení-právního-předpisu",
                  "pattern": "^ustanovení-právního-předpisu$"
                },
                "označení": {
                  "type": "string",
                  "examples": [
                    "zákona č. 247/2000 Sb. - Zákon o získávání a zdokonalování odborné způsobilosti k řízení motorových vozidel a o změnách některých zákonů, ve znění pozdějších předpisů"
                  ]
                }
              }
            }
          },
          "hlavní-ustanovení": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "type": {
                  "type": "string",
                  "default": "ustanovení-právního-předpisu",
                  "pattern": "^ustanovení-právního-předpisu$"
                },
                "označení": {
                  "type": "string",
                  "examples": [
                    "§ 100 zákona č. 361/2000 Sb. - Zákon o provozu na pozemních komunikacích a o změnách některých zákonů (zákon o silničním provozu), ve znění pozdějších předpisů"
                  ]
                }
              }
            }
          },
          "činnosti": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "type": {
                  "type": "string",
                  "default": "činnost",
                  "pattern": "^činnost$"
                },
                "id": {
                  "type": "string",
                  "examples": [
                    "činnost/A1046/CR6072"
                  ],
                  "pattern": "^činnost/A[0-9]+/CR[0-9]+$"
                },
                "kód-činnosti": {
                  "type": "string",
                  "examples": [
                    "CR6072"
                  ],
                  "pattern": "^CR[0-9]+$"
                },
                "název-činnosti": {
                  "type": "object",
                  "examples": [
                    { "cs": "Vedení centrálního registru řidičů" }
                  ],
                  "properties": {
                    "cs": {
                      "type": "string"
                    }
                  }
                },
                "popis-činnosti": {
                  "type": "object",
                  "examples": [
                    { "cs": "361/2000 124-2e" }
                  ],
                  "properties": {
                    "cs": {
                      "type": "string"
                    }
                  }
                },
                "typ-činnosti": {
                  "type": "string",
                  "examples": [
                    "typ-činnosti/STATSPR"
                  ],
                  "pattern": "^typ-činnosti/[0-9]+$"
                },
                "platnost-činnosti-od": {
                  "type": "string",
                  "examples": [
                    "2018-05-28"
                  ],
                  "format": "date"
                },
                "platnost-činnosti-do": {
                  "type": "string",
                  "examples": [
                    "2020-02-28"
                  ],
                  "format": "date"
                }
              }
            }
          },
          "vykonávající-ovm": {
            "type": "array",
            "examples": [
                "orgán-veřejné-moci/66003008"
              ],
            "items": {
              "type": "string",
              "pattern": "^orgán-veřejné-moci/[0-9]{8}(\\.[0-9]+)?$"
            }
          },
          "vykonávající-kategorie-ovm": {
            "type": "array",
            "examples": [
                "kategorie-ovm/KO11"
              ],
            "items": {
              "type": "string",
              "pattern": "^kategorie-ovm/KO[0-9]+$"
            }
          },
          "vykonávající-spuú": {
            "type": "array",
            "examples": [
              "soukromoprávní-uživatel-údajů/65269705.9999"
            ],
            "items": {
              "type": "string",
              "pattern": "^soukromoprávní-uživatel-údajů/[0-9]{8}\\.[0-9]+$"
            }
          },
          "vykonávající-kategorie-spuú": {
            "type": "array",
            "examples": [
              "kategorie-spuú/KU1"
            ],
            "items": {
              "type": "string",
              "pattern": "^kategorie-spuú/KU[0-9]+$"
            }
          },
          "ohlašovatel": {
            "type": "string",
            "examples": [
              "orgán-veřejné-moci/00007064"
            ],
            "pattern": "^orgán-veřejné-moci/[0-9]{8}(\\.[0-9]+)?$"
          },
          "vznik": {
            "type": "string",
            "examples": [
              "2017-08-18"
            ],
            "format": "date"
          },
          "zánik": {
            "type": "string",
            "examples": [
              "2018-02-06"
            ],
            "format": "date"
          },
          "platnost-od": {
            "type": "string",
            "examples": [
              "2018-07-02"
            ],
            "format": "date"
          },
          "platnost-do": {
            "type": "string",
            "examples": [
              "2019-01-31"
            ],
            "format": "date"
          },
          "poslední-změna": {
            "type": "string",
            "examples": [
              "2018-10-09"
            ],
            "format": "date"
          }
        }
      }
    }
  }
}