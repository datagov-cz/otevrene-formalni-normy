  {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://data.gov.cz/otevřené-formální-normy/registr-práv-a-povinností/role.schema.json",
    "required": [
      "položky"
    ],
    "type": "object",
    "properties": {
      "položky": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "default": "role",
              "pattern": "^role$"
            },
            "id": {
              "type": "string",
              "examples": [
                "role/A4293/CR49389/00007064"
              ],
              "pattern": "^role/A[0-9]+/CR[0-9]+/(([0-9]{8}(\\.[0-9]+)?)|(KO[0-9]+)|(KU[0-9]+))$"
            },
            "ovm": {
              "type": "string",
              "examples": [
                "orgán-veřejné-moci/00007064"
              ],
              "pattern": "^orgán-veřejné-moci/[0-9]{8}(\\.[0-9]+)?$"
            },
            "spuú": {
              "type": "string",
              "examples": [
                "soukromoprávní-uživatel-údajů/70099618.9999"
              ],
              "pattern": "^soukromoprávní-uživatel-údajů/[0-9]{8}\\.[0-9]+$"
            },
            "kategorie-ovm": {
              "type": "string",
              "examples": [
                "kategorie-ovm/KO198"
              ],
              "pattern": "^kategorie-ovm/KO[0-9]+$"
            },
            "kategorie-spuú": {
              "type": "string",
              "examples": [
                "kategorie-spuú/KU3"
              ],
              "pattern": "^kategorie-spuú/KU[0-9]+$"
            },
            "činnost": {
              "type": "string",
              "examples": [
                "činnost/A4293/CR49389"
              ],
              "pattern": "^činnost/A[0-9]+/CR[0-9]+$"
            }
          }
        }
      }
    }
  }