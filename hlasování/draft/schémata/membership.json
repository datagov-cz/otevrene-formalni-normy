    "properties": {
        "id": {
            "title": "ID členství",
            "description": "Unikátní ID členství, přidělené nebo odvozené.",
            "type": ["string", "null"]
        },
        "label": {
            "title": "Popis",
            "description": "Popis členství osoby v organizaci.",
            "type": ["string", "null"]
        },
        "role": {
            "title": "Role",
            "description": "Role v organizaci.",
            "type": ["string", "null"]
        },
        "person_id": {
            "title": "ID osoby",
            "description": "ID osoby, jíž se týká dané členství.",
